# ============================================================================
# BSK Training Video Generator - Docker Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION (Docker)
# ============================================================================
# Use 'postgres' as host (Docker service name), not 'localhost'
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=webel_test
DB_PORT=5432

# Full database URL (auto-generated in docker-compose.yml)
# DATABASE_URL=postgresql+psycopg2://postgres:password@postgres:5432/webel_test

# ============================================================================
# REQUIRED API KEYS
# ============================================================================

# Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Unsplash API Access Key
# Get from: https://unsplash.com/oauth/applications
UNSPLASH_ACCESS_KEY=your_unsplash_key_here

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application Port (exposed to host)
APP_PORT=54300

# Base URLs
API_BASE_URL=http://localhost:54300
BASE_URL=http://localhost:8000



# ============================================================================
# EXTERNAL BSK API (if applicable)
# ============================================================================

BSK_API_BASE_URL=https://bsk-portal.example.com/api
BSK_API_USERNAME=your_bsk_username
BSK_API_PASSWORD=your_bsk_password



BSK_API_VIDEO_BASE_URL=https://191.178.37.76/api
BSK_API_VIDEO_USERNAME=your_bsk_video_username
BSK_API_VIDEO_PASSWORD=your_bsk_video_password

# ============================================================================
# OPTIONAL: PGADMIN (Database Management UI)
# ============================================================================

# PgAdmin credentials (only used if --profile tools is specified)
PGADMIN_EMAIL=admin@bsk.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================================================
# SYSTEM CONFIGURATION (Docker handles these automatically)
# ============================================================================

# Video storage directory (inside container)
VIDEO_BASE_DIR=/app/videos

